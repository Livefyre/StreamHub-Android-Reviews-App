<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/newReviewTitle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#0F98EC"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <Button
                android:id="@+id/backtoReviewActivity"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/back_arrow" />

            <TextView
                android:id="@+id/reviewText"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/backtoReviewActivity"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="New Review"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/postReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#0F98EC"
                android:text="POST"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/newReviewTitle"
            android:background="#ffffff" >

            <LinearLayout
                android:id="@+id/newReviewScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="30dp"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:paddingLeft="16dp" >

                    <TextView
                        android:id="@+id/newReviewTitleTv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Title"
                        android:textColor="#000"
                        android:visibility="invisible" />

                    <EditText
                        android:paddingRight="16dp"
                        android:id="@+id/newReviewTitleEt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="#ffffff"
                        android:hint="Title"
                        android:imeOptions="flagNavigateNext"
                        android:lineSpacingExtra="3dp"
                        android:textColor="#4C4C4C"
                        android:textColorHint="#999999"
                        android:textSize="24sp" >

                        <requestFocus />
                    </EditText>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_marginTop="8dp"
                        android:background="#D6D6D6" />

                    <RatingBar
                        android:id="@+id/newReviewRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="35dp"
                        android:numStars="5"
                        android:progressDrawable="@drawable/big_starbar" />

                    <TextView
                        
                        android:id="@+id/newReviewProsTv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="16dp"
                        android:text="Pros"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:visibility="invisible" />

                    <EditText
                         android:paddingRight="16dp"
                        android:id="@+id/newReviewProsEt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="#ffffff"
                        android:ems="10"
                        android:hint="Pros"
                        android:lineSpacingExtra="5dp"
                        android:textColor="#4C4C4C"
                        android:textColorHighlight="#999999"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_marginTop="8dp"
                        android:background="#D6D6D6" />

                    <TextView
                        android:id="@+id/newReviewConsTv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="16dp"
                        android:text="Cons"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:visibility="invisible" />

                    <EditText
                         android:paddingRight="16dp"
                        android:id="@+id/newReviewConsEt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="#ffffff"
                        android:ems="10"
                        android:hint="Cons"
                        android:lineSpacingExtra="5dp"
                        android:textColor="#4C4C4C"
                        android:textColorHighlight="#999999"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_marginTop="8dp"
                        android:background="#D6D6D6" />

                    <TextView
                        android:id="@+id/newReviewBodyTv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="20dp"
                        android:text="Description"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:visibility="invisible" />

                    <EditText
                         android:paddingRight="16dp"
                        android:id="@+id/newReviewBodyEt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:hint="Description"
                        android:lineSpacingExtra="5dp"
                        android:textColor="#4C4C4C"
                        android:textColorHighlight="#999999"
                        android:textSize="14sp" 
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/camBtn"
                            android:layout_width="23dp"
                            android:layout_height="20dp"
                            android:src="@drawable/cam" />

                        <TextView
                            android:id="@+id/addPhoto"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@+id/camBtn"
                            android:paddingLeft="8dp"
                            android:text="ADD PHOTO"
                            android:textColor="#0F98EC"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/capturedImage"
                                android:layout_width="wrap_content"
                                android:layout_height="360dp"
                                android:background="@drawable/wimg"
                                android:scaleType="centerCrop"
                                android:visibility="gone" />

                            <RelativeLayout
                                android:id="@+id/deleteCapturedImage"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="top|right"
                                android:background="#80000000"
                                android:visibility="gone" >

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/xmark" />
                            </RelativeLayout>
                        </FrameLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>